<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA -->

    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>
            by.servlet.MainServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <!-- AAAAAAAAAAAAAAAAAAAAAAAAAA -->

    <servlet>
        <servlet-name>carAdServlet</servlet-name>
        <servlet-class>
            by.servlet.CarAdServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>carAdServlet</servlet-name>
        <url-pattern>/ads</url-pattern>
    </servlet-mapping>

    <!-- AAAAAAAAAAAAAAAAAAAAAAAAAA -->

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>
            by.servlet.UserServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <!-- AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA -->

    <filter>
        <filter-name>MainFilter</filter-name>
        <filter-class>by.filter.MainFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>MainFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>

    <!-- AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA -->

    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            C:\Tomcat\apache-tomcat-9.0.43\webapps\data
        </param-value>
    </context-param>


</web-app>

